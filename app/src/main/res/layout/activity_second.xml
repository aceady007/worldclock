<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <EditText
        android:id="@+id/second_activity_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="CityName"
        android:hint="@string/second_activity_edit_text_hint"
        android:inputType="text"
        app:iconifiedByDefault="false" />

    <ListView
        android:id="@+id/second_activity_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_cities_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        android:contentDescription="@string/select_your_favorite_cities_to_observe_their_timezones"
        android:src="@drawable/ic_save" />

</RelativeLayout>